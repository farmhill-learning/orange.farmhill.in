<% for (const item of items) { %>
    <div class="person rounded-2 border grid">
        <div class="g-col-12 g-col-md-4 g-col-lg-2">
            <% if (item.photo) { %>
                <img class="square-image w-100" src="<%= item.photo %>">
            <% } %>
        </div>
        <div class="g-col-12 g-col-md-8 g-col-lg-10">
            <div class="person-header text-center-sm">
                <h4><%= item.name %></h4>
                <div class="person-subtitle"><%= item.subtitle %></div>

                <div class="social-links">
                    <% if (item.linkedin) { %>
                        <a href="<%= item.linkedin %>" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    <% } %>
                    <% if (item.instagram) { %>
                        <a href="<%= item.instagram %>" title="Instagram"><i class="bi bi-instagram"></i></a>
                    <% } %>
                    <% if (item.website) { %>
                        <a href="<%= item.website %>" title="Website / Homepage"><i class="bi bi-house"></i></a>
                    <% } %>
                </div>
            </div>

            <p><%= item.bio %>
            </p>
        </div>
    </div>
<% } %>

